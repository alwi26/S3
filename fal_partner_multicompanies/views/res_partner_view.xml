<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
            <field name="parent_id" position="attributes">
                <attribute name="attrs">{'invisible': ['&amp;',('company_name', '!=', False),('company_name', '!=', '')]}
                </attribute>
            </field>

            <xpath expr="//field[@name='parent_id']" position="after">
                <label string="This is a holding companies" context="{'default_is_company': False}" attrs="{'invisible': ['|',('is_company','=', False), ('parent_id','!=', False)]}"/>
            </xpath>

            <xpath expr="//page[1]" position="after">
                <page string="Companies">
                    <field name="fal_child_ids" context="{'default_is_company':True, 'is_create_from_parent' : True}"/>
                </page>
            </xpath> 
            </field>
        </record>
    </data>
</odoo>