<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_propose_wizard" model="ir.ui.view">
            <field name="name">propose.wizard</field>
            <field name="model">propose.wizard</field>
            <field name="arch" type="xml">
                <form string="Propose">
                    <label string="order ini membutuhkan approval karena credit available kurang dari 0, apakah akan di proses?"/>
                    <footer>
                        <button name="propose" string="Propose" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_propose_wizard" model="ir.actions.act_window">
            <field name="name">Propose Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">propose.wizard</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_propose_wizard"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
